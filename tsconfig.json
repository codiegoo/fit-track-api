{
  "compilerOptions": {
    "target": "ES2022", // más moderno para Node 18+/Next 15
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ], // alinea con el target
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".", // ← necesario para que "paths" funcione
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node"
    ] // ← tipado de process, crypto, etc.
    ,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
, "src/app/api/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
